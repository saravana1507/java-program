package forloop;

public class Countnumber_forloop {

	public static void main(String[] args) {
		Countnumber_forloop obj=new Countnumber_forloop();
		obj.count(1654);
		obj.count(5434);
	}
public void count(int i)
{  int total=0;
	for(;i>0;i/=10)
	{
		int a=i%10;
		total=total+a;
	}
	System.out.println("count the total number= "+total);
}
}
